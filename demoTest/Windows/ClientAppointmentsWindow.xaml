<Window x:Class="demoTest.Windows.ClientAppointmentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:demoTest.Windows"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="ClientAppointmentsWindow"
        Width="650"
        Height="350"
        ResizeMode="NoResize"
        mc:Ignorable="d">
    <Grid>
        <DataGrid x:Name="AppointsDg" Margin="20" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="Id"/>
                <DataGridTextColumn Binding="{Binding Service.Title}" Header="Услуга"/>
                <DataGridTextColumn Binding="{Binding Service.Cost}" Header="Цена"/>
                <DataGridTextColumn Binding="{Binding StartTime}" Header="Услуга"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
