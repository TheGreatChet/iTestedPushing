<Window x:Class="demoTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:demoTest"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Главное окно"
        Width="1000"
        Height="550"
        MinWidth="900"
        MinHeight="500"
        MaxWidth="1200"
        MaxHeight="650"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" MinHeight="80"/>
            <RowDefinition Height="10*" MinHeight="400"/>
        </Grid.RowDefinitions>

        <Rectangle Fill="#FFFFFFE1"/>

        <StackPanel Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Image Width="50"
                   Height="50"
                   Margin="10,5,5,5"
                   Source="/Resources/service_logo.png"/>

            <TextBlock Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Text="Поломка"
                       TextAlignment="Center"/>
        </StackPanel>

        <Frame x:Name="NavFr" Grid.Row="1"/>

    </Grid>
</Window>
